<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#004151"
                android:centerColor="#163546"
                android:endColor="#0094ba"
                android:type="linear"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#0094ba"
                android:centerColor="#163546"
                android:endColor="#004151"
                android:type="linear"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
