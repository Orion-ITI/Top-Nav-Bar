<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/rounded_toolbar_background"
    android:elevation="4dp"
    android:padding="12dp">

    <!-- WiFi Icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/wifiIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/wifi"
        android:layout_marginStart="10dp"
        android:tint="@color/white"
        android:contentDescription="WiFi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircularIcon" />

    <!-- Bluetooth Icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bluetoothIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/bluetooth"
        android:tint="@color/white"
        android:contentDescription="Bluetooth"
        app:layout_constraintStart_toEndOf="@id/wifiIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="60dp"
        app:shapeAppearanceOverlay="@style/CircularIcon" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:45 AM"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="monospace"
        android:letterSpacing="0.05"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintStart_toEndOf="@id/bluetoothIcon"
        app:layout_constraintEnd_toStartOf="@id/drowsinessIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Drowsiness Icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/drowsinessIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/eye"
        android:tint="@color/white"
        android:contentDescription="Drowsiness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/settingsIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="22dp"
        app:shapeAppearanceOverlay="@style/CircularIcon" />

    <!-- Settings Icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/settingsIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/setting"
        android:tint="@color/white"
        android:layout_marginEnd="10dp"
        android:contentDescription="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircularIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>